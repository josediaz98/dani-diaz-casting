---
const currentPath = Astro.url.pathname;

const navItems = [
  {
    label: "My Work",
    href: "#",
    children: [
      { label: "Fiction", href: "/work/fiction" },
      { label: "Ads & Fashion Films", href: "/work/ads" },
      { label: "Music Videos", href: "/work/music-videos" },
    ],
  },
  { label: "About", href: "/about" },
  { label: "Contact", href: "/contact" },
];

function isActive(href: string): boolean {
  if (href === "/") return currentPath === "/";
  return currentPath.startsWith(href);
}
---

<header class="fixed top-0 left-0 right-0 z-50 bg-black/90 backdrop-blur-sm">
  <nav class="container flex items-center justify-between h-20">
    <!-- Logo -->
    <a href="/" class="text-xl font-bold tracking-tight hover:opacity-80 transition-opacity">
      DANI D√çAZ
    </a>

    <!-- Desktop Navigation -->
    <div class="hidden md:flex items-center gap-8">
      {navItems.map((item) => (
        item.children ? (
          <div class="relative group">
            <button class="flex items-center gap-1 text-sm uppercase tracking-wider hover:opacity-80 transition-opacity">
              {item.label}
              <svg class="w-4 h-4 transition-transform group-hover:rotate-180" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7" />
              </svg>
            </button>
            <div class="absolute top-full left-0 pt-2 opacity-0 invisible group-hover:opacity-100 group-hover:visible transition-all duration-200">
              <div class="bg-black border border-white/10 min-w-[200px]">
                {item.children.map((child) => (
                  <a
                    href={child.href}
                    class:list={[
                      "block px-4 py-3 text-sm hover:bg-white/5 transition-colors",
                      isActive(child.href) && "text-purple-400"
                    ]}
                  >
                    {child.label}
                  </a>
                ))}
              </div>
            </div>
          </div>
        ) : (
          <a
            href={item.href}
            class:list={[
              "text-sm uppercase tracking-wider hover:opacity-80 transition-opacity",
              isActive(item.href) && "text-purple-400"
            ]}
          >
            {item.label}
          </a>
        )
      ))}
    </div>

    <!-- Mobile Menu Button -->
    <button
      id="mobile-menu-btn"
      class="md:hidden p-2 hover:bg-white/10 transition-colors"
      aria-label="Toggle menu"
    >
      <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path id="menu-icon" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
      </svg>
    </button>
  </nav>

  <!-- Mobile Navigation -->
  <div id="mobile-menu" class="hidden md:hidden border-t border-white/10">
    <div class="container py-4 space-y-4">
      {navItems.map((item) => (
        item.children ? (
          <div class="space-y-2">
            <span class="text-sm uppercase tracking-wider text-gray-400">
              {item.label}
            </span>
            <div class="pl-4 space-y-2">
              {item.children.map((child) => (
                <a
                  href={child.href}
                  class:list={[
                    "block text-sm hover:text-purple-400 transition-colors",
                    isActive(child.href) && "text-purple-400"
                  ]}
                >
                  {child.label}
                </a>
              ))}
            </div>
          </div>
        ) : (
          <a
            href={item.href}
            class:list={[
              "block text-sm uppercase tracking-wider hover:text-purple-400 transition-colors",
              isActive(item.href) && "text-purple-400"
            ]}
          >
            {item.label}
          </a>
        )
      ))}
    </div>
  </div>
</header>

<script>
  const mobileMenuBtn = document.getElementById('mobile-menu-btn');
  const mobileMenu = document.getElementById('mobile-menu');

  mobileMenuBtn?.addEventListener('click', () => {
    mobileMenu?.classList.toggle('hidden');
  });
</script>
