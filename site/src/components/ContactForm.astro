---
// ContactForm component
// Note: Form submission will need to be connected to an API route or service like Resend
---

<form id="contact-form" class="space-y-6">
  <div>
    <label for="name" class="block text-sm font-medium mb-2">Name</label>
    <input
      type="text"
      id="name"
      name="name"
      required
      class="w-full px-4 py-3 bg-white/5 border border-white/10 focus:border-purple-400 focus:outline-none transition-colors"
      placeholder="Your name"
    />
  </div>

  <div>
    <label for="email" class="block text-sm font-medium mb-2">Email</label>
    <input
      type="email"
      id="email"
      name="email"
      required
      class="w-full px-4 py-3 bg-white/5 border border-white/10 focus:border-purple-400 focus:outline-none transition-colors"
      placeholder="your@email.com"
    />
  </div>

  <div>
    <label for="category" class="block text-sm font-medium mb-2">Project Type</label>
    <select
      id="category"
      name="category"
      required
      class="w-full px-4 py-3 bg-white/5 border border-white/10 focus:border-purple-400 focus:outline-none transition-colors"
    >
      <option value="">Select a category</option>
      <option value="fiction">Fiction (Film/TV)</option>
      <option value="ads">Advertising/Fashion</option>
      <option value="music-videos">Music Videos</option>
      <option value="networking">Networking/Other</option>
    </select>
  </div>

  <div>
    <label for="message" class="block text-sm font-medium mb-2">Message</label>
    <textarea
      id="message"
      name="message"
      rows={5}
      required
      class="w-full px-4 py-3 bg-white/5 border border-white/10 focus:border-purple-400 focus:outline-none transition-colors resize-none"
      placeholder="Tell me about your project..."
    ></textarea>
  </div>

  <button
    type="submit"
    class="btn btn-primary w-full"
  >
    Send Message
  </button>

  <p id="form-status" class="text-center text-sm hidden"></p>
</form>

<script>
  const form = document.getElementById('contact-form') as HTMLFormElement;
  const status = document.getElementById('form-status');

  form?.addEventListener('submit', async (e) => {
    e.preventDefault();

    const formData = new FormData(form);
    const data = Object.fromEntries(formData);

    if (status) {
      status.textContent = 'Sending...';
      status.className = 'text-center text-sm text-gray-400';
      status.classList.remove('hidden');
    }

    try {
      // TODO: Replace with actual API endpoint
      // const response = await fetch('/api/contact', {
      //   method: 'POST',
      //   headers: { 'Content-Type': 'application/json' },
      //   body: JSON.stringify(data),
      // });

      // Temporary: Log to console and show success
      console.log('Form data:', data);

      if (status) {
        status.textContent = 'Thank you! Your message has been sent.';
        status.className = 'text-center text-sm text-green-400';
      }

      form.reset();
    } catch (error) {
      if (status) {
        status.textContent = 'Something went wrong. Please try again.';
        status.className = 'text-center text-sm text-red-400';
      }
    }
  });
</script>
