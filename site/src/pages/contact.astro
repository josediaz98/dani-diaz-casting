---
import Layout from '../layouts/Layout.astro';
import ContactForm from '../components/ContactForm.astro';
import { siteConfig } from '../data/site';
---

<Layout
  title="Contact"
  description="Get in touch with Dani DÃ­az for casting services. Contact for film, advertising, and music video projects."
>
  <div class="pt-24">
    <div class="container">
      <div class="grid lg:grid-cols-2 gap-12 lg:gap-20">
        <!-- Left Column - Info -->
        <div>
          <h1 class="text-4xl md:text-5xl font-bold mb-6">Get In Touch</h1>

          <p class="text-lg text-gray-300 mb-8">
            Have a project in mind? I'd love to hear about it. Fill out the form and I'll get back to you as soon as possible.
          </p>

          <div class="space-y-6 mb-12">
            <div>
              <h3 class="text-sm uppercase tracking-wider text-gray-400 mb-2">Working In</h3>
              <p>Spanish, English & Catalan</p>
            </div>

            <div>
              <h3 class="text-sm uppercase tracking-wider text-gray-400 mb-2">Based In</h3>
              <p>Spain</p>
              <p class="text-gray-400">International projects across Europe & Latin America</p>
            </div>
          </div>

          <!-- Social Links -->
          <div>
            <h3 class="text-sm uppercase tracking-wider text-gray-400 mb-4">Connect</h3>
            <div class="flex flex-col gap-2">
              <a
                href={siteConfig.social.instagram}
                target="_blank"
                rel="noopener noreferrer"
                class="text-purple-400 hover:text-purple-300 transition-colors"
              >
                Instagram
              </a>
              <a
                href={siteConfig.social.linkedin}
                target="_blank"
                rel="noopener noreferrer"
                class="text-purple-400 hover:text-purple-300 transition-colors"
              >
                LinkedIn
              </a>
              <a
                href={siteConfig.social.imdb}
                target="_blank"
                rel="noopener noreferrer"
                class="text-purple-400 hover:text-purple-300 transition-colors"
              >
                IMDb
              </a>
            </div>
          </div>
        </div>

        <!-- Right Column - Form -->
        <div>
          <div class="bg-white/5 p-6 md:p-8">
            <h2 class="text-xl font-semibold mb-6">For Clients</h2>
            <ContactForm />
          </div>
        </div>
      </div>

      <!-- Talent Section -->
      <section class="py-16 mt-16 border-t border-white/10">
        <div class="max-w-2xl">
          <h2 class="text-2xl font-bold mb-4">For Talent</h2>
          <p class="text-gray-300 mb-6">
            Are you an actor, model, or interested in being part of my talent database? Join my database to be considered for upcoming projects.
          </p>
          <a
            href={siteConfig.talentFormUrl}
            target="_blank"
            rel="noopener noreferrer"
            class="btn btn-outline"
          >
            Join My Database
          </a>
        </div>
      </section>
    </div>
  </div>
</Layout>
