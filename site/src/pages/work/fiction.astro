---
import Layout from '../../layouts/Layout.astro';
import ProjectCard from '../../components/ProjectCard.astro';
import { fictionProjects } from '../../data/projects';

// Get first 6 projects for MVP
const projects = fictionProjects.slice(0, 6);
---

<Layout
  title="Fiction"
  description="Feature films and short films casting by Dani DÃ­az. Over 60 casting processes for fiction projects with directors from around the world."
>
  <div class="pt-24 pb-8">
    <div class="container">
      <!-- Header -->
      <header class="max-w-3xl mb-12">
        <h1 class="text-4xl md:text-5xl font-bold mb-6">Fiction</h1>
        <p class="text-lg text-gray-300 leading-relaxed">
          Authentic stories start with real faces. I've led <strong>60+</strong> casting processes for <strong>feature films and short films</strong>, working with <strong>directors from around the world</strong>. Several of these projects have been <strong>selected and awarded at renowned festivals</strong>. My work brings together established actors and natural talent, with a multicultural, human approach and a strong focus on <strong>street casting</strong>.
        </p>
      </header>

      <!-- Projects Grid -->
      <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-6">
        {projects.map((project) => (
          <ProjectCard project={project} />
        ))}
      </div>

      <!-- Note about more projects -->
      {fictionProjects.length > 6 && (
        <p class="text-center text-gray-500 mt-12">
          Showing 6 of {fictionProjects.length} projects
        </p>
      )}
    </div>
  </div>

  <!-- CTA -->
  <section class="section border-t border-white/10">
    <div class="container text-center">
      <h2 class="text-2xl md:text-3xl font-bold mb-4">
        Have a fiction project?
      </h2>
      <p class="text-gray-400 mb-6">
        Let's find the perfect cast for your story.
      </p>
      <a href="/contact" class="btn btn-primary">
        Get In Touch
      </a>
    </div>
  </section>
</Layout>
