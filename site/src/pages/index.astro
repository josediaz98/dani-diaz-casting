---
import Layout from '../layouts/Layout.astro';
import ProjectCard from '../components/ProjectCard.astro';
import { siteConfig, heroContent, categories } from '../data/site';
import { getFeaturedProjects } from '../data/projects';

const featuredProjects = getFeaturedProjects();
---

<Layout title="Home">
  <!-- Hero Section with Bifurcation -->
  <section class="min-h-screen flex items-center justify-center pt-20">
    <div class="container text-center">
      <h1 class="text-5xl md:text-7xl lg:text-8xl font-bold tracking-tighter mb-4">
        {heroContent.title}
      </h1>
      <p class="text-xl md:text-2xl text-gray-400 uppercase tracking-widest mb-6">
        {heroContent.subtitle}
      </p>

      <p class="text-lg md:text-xl text-gray-300 max-w-2xl mx-auto mb-10">
        {heroContent.tagline}
      </p>

      <!-- Bifurcation CTAs (inspired by Correa Casting) -->
      <div class="flex flex-col sm:flex-row gap-4 justify-center mb-16">
        <a href="/work/fiction" class="btn btn-primary group">
          <span>View My Work</span>
          <svg class="w-4 h-4 ml-2 transition-transform group-hover:translate-x-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3" />
          </svg>
        </a>
        <a href={siteConfig.talentFormUrl} target="_blank" rel="noopener noreferrer" class="btn btn-outline group">
          <span>Join Talent Pool</span>
          <svg class="w-4 h-4 ml-2 transition-transform group-hover:translate-x-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M18 9v3m0 0v3m0-3h3m-3 0h-3m-2-5a4 4 0 11-8 0 4 4 0 018 0zM3 20a6 6 0 0112 0v1H3v-1z" />
          </svg>
        </a>
      </div>

      <!-- Stats Grid -->
      <div class="grid grid-cols-2 md:grid-cols-4 gap-6 md:gap-8 max-w-3xl mx-auto">
        <div class="text-center">
          <p class="text-4xl md:text-5xl font-bold text-purple-400 mb-1">
            {siteConfig.stats.castingsCompleted}
          </p>
          <p class="text-sm text-gray-400 uppercase tracking-wider">Castings</p>
        </div>
        <div class="text-center">
          <p class="text-4xl md:text-5xl font-bold text-purple-400 mb-1">
            {siteConfig.stats.yearsExperience}
          </p>
          <p class="text-sm text-gray-400 uppercase tracking-wider">Years</p>
        </div>
        <div class="text-center">
          <p class="text-4xl md:text-5xl font-bold text-purple-400 mb-1">
            {siteConfig.stats.languages}
          </p>
          <p class="text-sm text-gray-400 uppercase tracking-wider">Languages</p>
        </div>
        <div class="text-center">
          <p class="text-4xl md:text-5xl font-bold text-purple-400 mb-1">
            {siteConfig.stats.continents}
          </p>
          <p class="text-sm text-gray-400 uppercase tracking-wider">Continents</p>
        </div>
      </div>
    </div>
  </section>

  <!-- Logo Parade (Social Proof) -->
  <section class="py-12 border-y border-white/10">
    <div class="container">
      <p class="text-sm text-gray-500 uppercase tracking-widest text-center mb-8 reveal">
        Trusted by leading productions
      </p>
      <div class="flex flex-wrap justify-center items-center gap-8 md:gap-12 opacity-50 hover:opacity-70 transition-opacity reveal">
        <!-- Placeholder logos - replace with actual client logos -->
        <div class="h-8 w-24 bg-white/20 rounded flex items-center justify-center text-xs text-gray-400">HBO</div>
        <div class="h-8 w-24 bg-white/20 rounded flex items-center justify-center text-xs text-gray-400">Netflix</div>
        <div class="h-8 w-24 bg-white/20 rounded flex items-center justify-center text-xs text-gray-400">Amazon</div>
        <div class="h-8 w-24 bg-white/20 rounded flex items-center justify-center text-xs text-gray-400">Movistar+</div>
        <div class="h-8 w-24 bg-white/20 rounded flex items-center justify-center text-xs text-gray-400">RTVE</div>
      </div>
      <p class="text-xs text-gray-600 text-center mt-6 reveal">
        Replace with actual production/brand logos
      </p>
    </div>
  </section>

  <!-- Featured Projects Section (replaces video reel) -->
  <section class="section">
    <div class="container">
      <h2 class="text-3xl md:text-4xl font-bold text-center mb-4 reveal">Featured Work</h2>
      <p class="text-gray-400 text-center mb-12 max-w-2xl mx-auto reveal">
        Recent campaigns showcasing authentic talent and creative vision
      </p>
      <div class="grid md:grid-cols-2 lg:grid-cols-4 gap-6 stagger-grid">
        {featuredProjects.map((project) => (
          <div class="stagger-item reveal">
            <ProjectCard project={project} />
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- My Work Section -->
  <section class="section">
    <div class="container">
      <h2 class="text-3xl md:text-4xl font-bold text-center mb-12 reveal">My Work</h2>

      <div class="grid md:grid-cols-3 gap-8 stagger-grid">
        {categories.map((category) => (
          <a href={category.href} class="card group p-8 text-center stagger-item reveal">
            <span class="text-4xl font-bold text-purple-400 block mb-2">{category.count}</span>
            <h3 class="text-xl font-semibold mb-2">{category.title}</h3>
            <p class="text-gray-400 text-sm mb-4">{category.description}</p>
            <span class="text-sm uppercase tracking-wider text-purple-400 group-hover:underline">
              View Work
            </span>
          </a>
        ))}
      </div>
    </div>
  </section>

  <!-- About Preview -->
  <section class="section bg-white/5">
    <div class="container">
      <div class="max-w-3xl mx-auto text-center reveal">
        <h2 class="text-3xl md:text-4xl font-bold mb-6">About</h2>
        <p class="text-lg text-gray-300 mb-8">
          I am a Peruvian Casting Director with more than 12 years of experience leading projects across Latin America and Europe. I specialize in discovering authentic talent and creating inclusive, human-centered casting methodologies.
        </p>
        <a href="/about" class="btn btn-outline">
          Learn More
        </a>
      </div>
    </div>
  </section>

  <!-- CTA Section -->
  <section class="section">
    <div class="container text-center reveal">
      <h2 class="text-4xl md:text-5xl lg:text-6xl font-bold mb-6">
        Let's Cast It
      </h2>
      <p class="text-lg text-gray-300 max-w-2xl mx-auto mb-8">
        {heroContent.description}
      </p>
      <div class="flex flex-col sm:flex-row gap-4 justify-center">
        <a href="/contact" class="btn btn-primary">
          Get In Touch
        </a>
        <a href={siteConfig.talentFormUrl} target="_blank" rel="noopener noreferrer" class="btn btn-ghost">
          Join My Database
        </a>
      </div>
    </div>
  </section>
</Layout>
